<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/coor"
    android:background="#e3edfb"
    android:layout_height="match_parent"
    tools:context="com.pooya11.quran_question.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@drawable/actionbar"
        app:titleTextColor="#FFFFFF"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="top|right"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@color/colorBlue"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="bottom|left"
        app:srcCompat="@drawable/ic_cloud_download_black_24dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginTop="25dp"
        android:paddingLeft="80dp"
        android:text="صفحه اصلی"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="top|center_horizontal" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|left"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:background="#00FFFFFF"
        android:foregroundGravity="bottom"
        android:onClick="btn_open_nav"
        app:layout_anchor="@+id/include"
        app:layout_anchorGravity="top|right"
        app:srcCompat="@drawable/ic_dehaze_black_24dp" />

    <include
        android:id="@+id/include"
        layout="@layout/content_main" />


</android.support.design.widget.CoordinatorLayout>
