<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#e3edfb"
    android:layout_height="match_parent"
    tools:context="com.pooya11.quran_question.ListTestActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/actionbar"
        app:titleTextColor="#FFFFFF"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button_back_activity"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:onClick="btn_back_activity"
        android:background="@drawable/ic_arrow_back_black_24dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:textColor="#FFFFFF"
        android:text="لیست فرم های تست"
        android:layout_marginBottom="26dp"
        android:layout_alignBottom="@+id/toolbar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button5"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:textSize="30sp"
        android:onClick="btn_seven"
        android:textColor="#FFFFFFFF"
        android:theme="@style/my_btn"
        android:layout_marginTop="58dp"
        android:text="هفتم"
        android:layout_below="@+id/toolbar"
        android:layout_alignLeft="@+id/button_back_activity"
        android:layout_alignStart="@+id/button_back_activity" />

    <Button
        android:id="@+id/button6"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:textSize="30sp"
        android:textColor="#FFFFFFFF"
        android:theme="@style/my_btn"
        android:layout_alignBottom="@+id/button5"
        android:layout_centerHorizontal="true"
        android:text="هشتم" />

    <Button
        android:id="@+id/button7"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="نهم"
        android:textColor="#FFFFFFFF"
        android:theme="@style/my_btn"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/button6"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button5">

    </android.support.constraint.ConstraintLayout>


</RelativeLayout>
