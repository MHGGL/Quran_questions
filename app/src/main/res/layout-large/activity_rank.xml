<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="73dp"
        android:layout_alignParentBottom="true"
        android:text="برگشت به خانه"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:theme="@style/my_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/button11"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="179dp"
        android:theme="@style/my_btn"
        android:src="@drawable/ic_share_black_24dp"
        android:layout_above="@+id/button10"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/txt_name_test"
        android:layout_width="wrap_content"
        android:textColor="@color/colorBlue"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="29dp"
        android:textSize="25sp"
        android:layout_marginRight="29dp"
        android:layout_marginTop="45dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txt_number_true"
        android:layout_width="wrap_content"
        android:textSize="25sp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlue"
        android:layout_alignLeft="@+id/txt_name_test"
        android:layout_alignStart="@+id/txt_name_test"
        android:layout_below="@+id/txt_name_test"
        android:layout_marginTop="71dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/txt_number_false"
        android:textSize="25sp"
        android:layout_width="wrap_content"
        android:textColor="@color/colorBlue"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txt_number_true"
        android:layout_alignRight="@+id/txt_number_true"
        android:layout_below="@+id/txt_number_true"
        android:layout_marginTop="84dp"
        android:text="TextView" />

    <TextView
        android:textSize="25sp"
        android:id="@+id/txt_number_test"
        android:textColor="@color/colorBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_number_false"
        android:layout_alignStart="@+id/txt_number_false"
        android:layout_below="@+id/txt_number_false"
        android:layout_marginTop="88dp"
        android:text="TextView" />

    <com.github.mikephil.charting.charts.HorizontalBarChart
        android:id="@+id/chart"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_margin="50dp"
        android:onClick="framelayout_chart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="56dp">

    </com.github.mikephil.charting.charts.HorizontalBarChart>
</RelativeLayout>