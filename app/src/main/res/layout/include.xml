<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="67dp"
        android:layout_height="83dp"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_tests"
        android:layout_width="99dp"
        android:layout_height="59dp"
        android:text="تست ها"
        android:textStyle="bold"
        android:onClick="btn_tests"
        android:textColor="#FFFFFF"
        android:background="@drawable/shape_button"
        android:layout_marginBottom="57dp"
        android:layout_above="@+id/imageView2"
        android:layout_alignLeft="@+id/btn_exit"
        android:layout_alignStart="@+id/btn_exit" />

    <Button
        android:id="@+id/btn_developer"
        android:layout_width="99dp"
        android:layout_height="59dp"
        android:text="آموزش"
        android:textStyle="bold"
        android:onClick="btn_developer"
        android:textColor="#FFFFFF"
        android:background="@drawable/shape_button"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/btn_my_marks"
        android:layout_width="99dp"
        android:layout_height="59dp"
        android:text="کارنامه های من"
        android:onClick="btn_my_marks"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/shape_button"
        android:layout_alignBaseline="@+id/btn_developer"
        android:layout_alignBottom="@+id/btn_developer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="99dp"
        android:layout_height="59dp"
        android:text="خروج"
        android:textStyle="bold"
        android:theme="@style/MyButton"
        android:onClick="btn_exit"
        android:background="@drawable/shape_button"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp" />
</RelativeLayout>