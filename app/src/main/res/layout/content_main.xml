<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/layout_content"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pooya11.quran_question.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="67dp"
        android:layout_height="75dp"
        app:srcCompat="@mipmap/ic_launcher_round"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="246dp" />

    <Button
        android:id="@+id/btn_tests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تست ها"
        android:onClick="btn_tests"
        android:textColor="#FFFFFF"
        android:background="@drawable/shape_button"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="138dp" />

    <Button
        android:id="@+id/btn_developer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="آموزش"
        android:onClick="btn_developer"
        android:textColor="#FFFFFF"
        android:background="@drawable/shape_button"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="258dp" />

    <Button
        android:id="@+id/btn_my_marks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="کارنامه های من"
        android:onClick="btn_my_marks"
        android:textColor="#FFFFFF"
        android:background="@drawable/shape_button"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="259dp" />

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="خروج"
        android:onClick="btn_exit"
        android:textColor="#FFFFFF"
        android:background="@drawable/shape_button"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="380dp" />
</android.support.constraint.ConstraintLayout>
