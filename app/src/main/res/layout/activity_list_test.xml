<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pooya11.quran_question.ListTestActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/actionbar"
        app:titleTextColor="#FFFFFF"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <Button
        android:id="@+id/button_back_activity"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:onClick="btn_back_activity"
        android:background="@drawable/ic_arrow_back_black_24dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textSize="20sp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="13dp"
        android:text="لیست فرم های تست" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textColor="#FFFFFFFF"
        android:text="هفتم"
        android:onClick="btn_seven"
        android:theme="@style/my_btn"
        android:layout_below="@+id/toolbar"
        android:layout_alignLeft="@+id/button_back_activity"
        android:layout_alignStart="@+id/button_back_activity"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="هشتم"
        android:onClick="btn_eight"
        android:theme="@style/my_btn"
        android:textColor="#FFFFFFFF"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تهم"
        android:onClick="btn_nine"
        android:theme="@style/my_btn"
        android:textColor="#FFFFFFFF"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/fragment_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button2"
        android:layout_marginTop="16dp">

    </android.support.constraint.ConstraintLayout>


</RelativeLayout>
